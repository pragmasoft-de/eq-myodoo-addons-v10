<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="eq_report_general_configuration_form_view" model="ir.ui.view">
            <field name="name">eq.report.general.configuration.form.view</field>
            <field name="model">base.config.settings</field>
            <field name="inherit_id" ref="base_setup.view_general_configuration" />
            <field name="arch" type="xml">
	            <xpath expr="//label[@for='custom_footer']" position="before">
                    <label for="eq_report_logo"/>
                    <div>
                        <field name="eq_report_logo" class="oe_inline"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
