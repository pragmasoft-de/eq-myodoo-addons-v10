                <xpath expr="//group[@name='customers']" position="inside">

                    <label for="id" string="Partner"/>
                    <div>
                        <div>
                            <field name="default_creator_saleperson"/>
                            <label for="default_creator_saleperson"/>
                        </div>
                    </div>
                </xpath>

                <!--<form position="inside">-->
                <!--<group>-->
                <!--<label for="id" string="Partner" />-->
